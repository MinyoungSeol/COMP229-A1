<%- include ../partials/header.ejs %>

    <%- include ../partials/main_nav.ejs %>


    <!-- Add page content -->
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6"></div>

            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter name" name="name" required>
                </div>

                <div class="form-group">
                    <label for="numberTextField">Number</label>
                    <input type="text" class="form-control" id="numberTextField" placeholder="Enter number" name="number" required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control" id="emailTextField" placeholder="Enter email" name="email" required>
                </div>

                <button class="btn btn-primary" type="submit">Submit</button>
                <a href="/contact-list" class="btn btn-warning">Cancel</a>
            </form>

        </div>
    </div>


    <%- include ../partials/bottom_nav.ejs %>

